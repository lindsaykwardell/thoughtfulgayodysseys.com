---
interface Props {
    size?: "sm" | "md" | "lg"
}

const { size } = Astro.props;

const borderSize = (() => {
    switch (size) {
        case 'md':
            return "w-[120px] md:w-[200px] h-[120px] md:h-[200px]"
        case 'sm':
            return "w-[60px] md:w-[85px] h-[60px] md:h-[85px]"
        case 'lg':
        default:
            return "w-[250px] md:w-[350px] h-[250px] md:h-[350px]";
    }
})()

const imageSize = (() => {
    switch (size) {
        case 'md':
            return "w-[100px] md:w-[180px] h-[100px] md:h-[180px]"
        case 'sm':
            return "w-[50px] md:w-[75px] h-[50px] md:h-[75px]"
        case 'lg':
        default:
            return "w-[200px] md:w-[300px] h-[200px] md:h-[300px]";
    }
})()
---

<div transition:name="avatar">
    <div class=`${borderSize} rounded-full border border-stone-800 flex justify-center items-center aspect-square flex-grow transition duration-75`>
        <img loading="eager" src="/images/rebekah.jpg" alt="Rebekah Wardell profile photo" class=`${imageSize} rounded-full aspect-square transition duration-75`/>
    </div>
</div>